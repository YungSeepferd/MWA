FROM python:3.11-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Install Poetry
RUN pip install poetry==1.7.1

# Copy only MCP shim files
COPY tools/mcp-shim/ ./tools/mcp-shim/
COPY pyproject.toml poetry.lock* ./

# Install minimal dependencies for MCP shim
RUN poetry install --no-interaction --only main

# Set environment variables
ENV PYTHONPATH=/app \
    PYTHONUNBUFFERED=1 \
    MAFA_ENV=development

# Expose port for HTTP interface
EXPOSE 3000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD python tools/mcp-shim/mafa-health-monitor.py --health-check || exit 1

# Default command
CMD ["python", "tools/mcp-shim/mafa-health-monitor.py"]