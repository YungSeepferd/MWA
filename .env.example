# MAFA Configuration Environment Variables
# Copy this file to .env and fill in your actual values

# Telegram Bot Configuration
# Get bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# Discord Webhook Configuration
# Create webhook in your Discord server settings
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_id/your_webhook_token

# Database Configuration
# Path to SQLite database file (optional, defaults to data/listings.db)
DATABASE_PATH=data/listings.db

# Scraping Configuration
# Maximum time in seconds to wait for page loads
SCRAPING_TIMEOUT=30
# Minimum delay between requests in seconds (to avoid rate limiting)
MIN_REQUEST_DELAY=2
# Maximum number of retry attempts for failed requests
MAX_RETRIES=3

# Application Configuration
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
# Enable debug mode (enables additional logging and features)
DEBUG=false

# Security Configuration
# Enable secure mode (additional validation and checks)
SECURE_MODE=true
# Enable input sanitization for scraped data
SANITIZE_INPUT=true

# Optional: Custom configuration file path
# CONFIG_PATH=/path/to/your/config.json